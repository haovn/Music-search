/**
 * Theme the highlighted snippet text for a search entry.
 *
 * @param array $vars
 *
 */
function theme_music_search_snippets($vars) {
  //dpm($vars,'$vars');
  $result = '';
  // hao code: display code result
  if (isset($vars['doc'])) {
    $doc = (array)$vars['doc'];
    // hao code: add kết quả trả về từ solr
//    if (isset($doc['id'])) {
//      $result .= $doc['id'];
//      unset($doc['id']);
//    }

//    if (isset($doc['title'])) {
//      $result .= $doc['title'][0]."\n<br>";
//      unset($doc['title']);
//    }
    
    // hao code begin for index file system
  
    if (isset($doc['body'])) {
      $shortbody=substr($doc['body'][0],0,300).'<br>';
      $result .= '<b>File content:</b> '.$shortbody." (read more)\n<br>";
      unset($doc['body']);
    }
    if (isset($doc['score'])) {
      $result .= '<b>Score:</b> '.$doc['score']."\n<br>";
      unset($doc['score']);
    }
    // end  hao code begin for index file system
    if (isset($doc['keywords'])) {
      global $base_url;
      $result .="<br>"."Relate keywords:\n";
      foreach($doc['keywords'] as $key=>$value)
      {
        $link=l($value,$base_url."/search/music/".$value);
        $result .= $link.",";
      }
       $result .="\n";
      unset($doc['keywords']);
    }

    // end hao code
    $result .= (strlen($result) > 0) ? ' ... ' : '';
    //$result .= implode(' ... ', $snippets);
  }

  // end hao code
  return $result . ' ...';
}

